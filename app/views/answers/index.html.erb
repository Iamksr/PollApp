<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Poll</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<div class = "container">
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.poll.Title %></td>
        <td><%= answer.Title %></td>
        <td><%= link_to 'Show', answer,class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer),class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
  </div>
</table>

<br>

<%= link_to 'New Answer', new_answer_path,class: "btn btn-warning" %>
<%= link_to 'Create A Poll',polls_path,class: "btn btn-info"%>