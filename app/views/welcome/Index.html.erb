<div class="container">
  
  <table id='poll-table' class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @polls.each do |poll| %>
        <tr>
          <td><%= poll.title %></td><br>
        <td><%= poll.description %></td>
        <td><%= poll.start_Date %></td>
        <td><%= poll.end_date %></td>
          <td><%= link_to 'Show', poll,class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_poll_path(poll),class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', poll, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
