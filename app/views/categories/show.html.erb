<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @category.polls.each do |poll| %>

     <tr>
        <td><%= poll.title %></td><br>
        <td><%= poll.description %></td>
        <td><%= poll.start_date %></td>
        <td><%= poll.end_date %></td>
    </tr>
</p>
<% end %>
<%= link_to 'Back', categories_path %>

 <% if user_signed_in? %>
 <% if current_user.role == "admin" %>
<%= link_to 'Edit', edit_category_path(@category) %> |
<% end %>
<% end %>
